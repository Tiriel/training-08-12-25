{% form_theme form 'bootstrap_5_layout.html.twig' %}

{% macro input(form_input = '') %}
    <div class="form-floating mb-3">
        {{ form_widget(form_input) }}
        {{ form_label(form_input) }}
        {{ form_errors(form_input) }}
    </div>
{% endmacro %}

{{ form_start(form) }}
    <!-- Name input-->
    {{ _self.input(form.name) }}
    <!-- Email address input-->
    {{ _self.input(form.email) }}
    <!-- Subject input-->
    {{ _self.input(form.subject) }}
    <!-- Message input-->
    {{ _self.input(form.message) }}
    <!-- Submit Button-->
    <div class="d-grid"><button class="btn btn-primary btn-lg" style="background-color: limegreen; border-color: limegreen;" id="submitButton" type="submit">Submit</button></div>
{{ form_end(form) }}
